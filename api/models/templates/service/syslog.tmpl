{{ define "service" }}
  {
    "AWSTemplateFormatVersion" : "2010-09-09",
    "Parameters": {
      "Url": {
        "Type" : "String",
        "Description" : "Syslog URL, e.g. 'logs1.papertrailapp.com:11235'"
      }
    },
    "Resources": {
      "LambdaExecutionRole": {
        "Type": "AWS::IAM::Role",
        "Properties": {
          "AssumeRolePolicyDocument": {
            "Version": "2012-10-17",
            "Statement": [
              {
                "Effect": "Allow",
                "Principal": { "Service": [ "lambda.amazonaws.com" ] },
                "Action": [ "sts:AssumeRole" ]
              }
            ]
          },
          "Path": "/",
          "Policies": [
            {
              "PolicyName": "LogSubscriptionFilterRole",
              "PolicyDocument": {
                "Version": "2012-10-17",
                "Statement": [
                  {
                    "Effect": "Allow",
                    "Action": [
                      "lambda:InvokeFunction"
                    ],
                    "Resource": [
                      "*"
                    ]
                  },
                  {
                    "Effect": "Allow",
                    "Action": [
                      "logs:CreateLogGroup",
                      "logs:CreateLogStream",
                      "logs:PutLogEvents"
                    ],
                    "Resource": "*"
                  },
                  {
                    "Effect": "Allow",
                    "Action": [
                      "cloudformation:DescribeStacks"
                    ],
                    "Resource": { "Fn::Join": [ "", [ "arn:aws:cloudformation:", { "Ref": "AWS::Region" }, ":", { "Ref": "AWS::AccountId" }, ":stack/", {"Ref" : "AWS::StackName"}, "/*" ] ] }
                  }
                ]
              }
            }
          ]
        }
      },
      {{ range $k, $v := .ARNs }}
        "{{ upper $k }}LogSubscriptionFilter": {
          "DependsOn": [ "{{ upper $k }}LambdaPermission" ],
          "Type" : "AWS::Logs::SubscriptionFilter",
          "Properties" : {
            "DestinationArn" : { "Fn::GetAtt": [ "LambdaFunction", "Arn" ] },
            "FilterPattern" : "",
            "LogGroupName" : "{{ $v }}"
          }
        },
        "{{ upper $k }}LambdaPermission": {
          "Type": "AWS::Lambda::Permission",
          "Properties" : {
            "Action" : "lambda:InvokeFunction",
            "FunctionName" : { "Ref": "LambdaFunction" },
            "Principal" : { "Fn::Join": [".", ["logs", { "Ref": "AWS::Region" }, "amazonaws.com"]] },
            "SourceAccount" : { "Ref": "AWS::AccountId" },
            "SourceArn" : "{{ $v }}"
          }
        },
      {{ end }}
      "LambdaFunction": {
        "Type": "AWS::Lambda::Function",
        "Properties": {
          "Handler": "index.handler",
          "Role": { "Fn::GetAtt" : ["LambdaExecutionRole", "Arn"] },
          "Code": {
            "S3Bucket": { "Fn::Join": [ "-", [ "convox", { "Ref": "AWS::Region" } ] ] },
            "S3Key": "lambda/syslog.zip"
          },
          "Runtime": "nodejs",
          "Timeout": "25"
        }
      }
    },
    "Outputs": {
      {{ range $k, $v := .ARNs }}
        "{{ upper $k }}Link": {
          "Value": "{{ $v }}"
        },
      {{ end }}
      "Url": {
        "Value": { "Ref": "Url" }
      }
    }
  }
{{ end }}
